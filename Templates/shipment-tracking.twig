{% extends 'master.twig' %}

{% block content %}

	<div class="container">
		<div class="row mt-5 mb-4">
			<div class="col-md-12">
				<div class="TrackOrderFrom p-3">
					<h1>TRACK YOUR ORDER</h1>
					<p class="mt-3">To track your order please enter your Order ID in the box below and press the "Track" button. This was given to you on your receipt and in the confirmation email you should have received.</p>
					<div class="Order_Track_form">
						<form class="Track_Form">
							<div class="input-grp">
								<label>Order Id</label>&nbsp;
								<input type="text" name="" placeholder="Found in your order">
							</div>
							<div class="input-grp">
								<label>Order Email</label>&nbsp;
								<input type="text" name="" placeholder="Found in your order">
							</div>
							<div class="input-grp">
								<button class="Order_track_button">
									Track
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="Question_Form p-2">
					<h1 class="mt-5">QUESTIONS?</h1>
					<h2 class="mt-3">Send us a message:</h2>
					<div class="Question_Form_Area">
						<form>
							<div class="form-group">
								<label>Name*</label><br>
								<input type="text" name="" placeholder="Name">
							</div>
							<div class="form-group">
								<label>Email*</label><br>
								<input type="text" name="" placeholder="Email">
							</div>
							<div class="form-group">
								<label>Order Number*</label><br>
								<input type="text" name="" placeholder="Order Number">
							</div>
							<div class="form-group">
								<label>Message*</label><br>
								<!-- <input type="text" name="" placeholder="Message"> -->
								<textarea rows="6" placeholder="Message"></textarea>
							</div>
							<div class="form-group">
								<button>Send Message</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}


