{% extends 'master.twig' %}

{% block content %}

	<div class="container mb-4">
		<div class="row mt-5">
			<div class="col-md-12">
				<h1 class="myreppsport">MY REPPSPORTS ACCOUNT</h1>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-md-6">
				<h3 class="Login_Font">Login</h3>
				<div class="login_form mt-3">
					<form>
						<div class="form-grp mt-2">
							<label>Username or email address *</label><br>
							<input type="text" name="" placeholder="">
						</div>
						<div class="form-grp mt-2">
							<label>Password *</label><br>
							<input type="text" name="" placeholder="">
						</div>
						<div class="form-grp mt-2">
							<input class="checkboxy" type="checkbox" name="" placeholder="">
							<label>Remember me</label>
						</div>
						<div class="form-grp mt-2">
							<button>log in</button>
						</div>
						<div class="form-grp mt-2">
							<a href="#">Lost your password?</a>
						</div>
					</form>
				</div>
			</div>
			<div class="col-md-6">
				<h3 class="Register_Font">Register</h3>
				<div class="login_form mt-3">
					<form>
						<div class="form-grp mt-2">
							<label>Email address *</label><br>
							<input type="text" name="" placeholder="">
						</div>
						<div class="form-grp mt-1">
							<p>A password will be sent to your email address.</p>
						</div>
						<div class="form-grp mt-3">
							<button>register</button>
						</div>
						
					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}


